<configuration>
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%cyan([) %boldWhite(%d{dd/MM/yyyy HH:mm:ss}) %cyan(%-5level]) %boldBlue([%t])
                %boldWhite([%logger{0}]) %boldRed(-->) %white(%msg) %n
            </pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="Console"/>
    </root>
</configuration>